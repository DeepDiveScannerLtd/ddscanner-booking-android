<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.ddscanner.booking.screens.results.dailytours.DailyTourWithDcListItemViewModel" />
    </data>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginVertical="6dp"
        android:background="@color/white"
        android:foreground="?attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="105dp"
                android:scaleType="centerCrop"
                app:loadPhotoFrom="@{viewModel.dailyTour.photo}" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:paddingLeft="16dp"
                android:paddingRight="12dp"
                android:paddingTop="12dp">

                <LinearLayout
                    android:id="@+id/text_block"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:layout_toLeftOf="@+id/price_block"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif-medium"
                        android:letterSpacing="0.01"
                        android:lines="1"
                        android:text="@{viewModel.dailyTour.name}"
                        android:textColor="#212121"
                        android:textSize="18sp"
                        android:textStyle="normal"
                        tools:text="Diving to Racha islands" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="sans-serif"
                        android:letterSpacing="0.01"
                        android:textColor="#a3a3a3"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        tools:text="@{viewModel.dailyTour.divesLevelString}" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/price_block"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/price_background"
                    android:orientation="vertical"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:letterSpacing="0.02"
                        android:text="From"
                        android:textColor="#212121"
                        android:textSize="11sp"
                        android:textStyle="normal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:letterSpacing="0.02"
                        android:text="@{viewModel.dailyTour.price}"
                        android:textColor="#212121"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:text="2500 B" />
                </LinearLayout>
            </RelativeLayout>

            <include
                layout="@layout/view_dive_center_info_short"
                app:diveCenter="@{viewModel.dailyTour.diveCenter}" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>